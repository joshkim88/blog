<h2 class="text-center pt-5"><%= @article.title %></h2>


<p class="text-center">
  <%= @article.text %>
</p>

<h4 class="text-center pt-3">Comments:</h4>
<div class="text-center"><%= render @article.comments %></div>

<h5 class="text-center pt-3">Add a comment:</h5>
<div class="form text-center"><%= render 'comments/form' %></div>

<div class="text-center pt-5">
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %> |
  <%= link_to 'Delete', article_path(@article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</div>
